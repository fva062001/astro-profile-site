---
import Main from "../layouts/Main.astro"
import Cards from "../components/Cards.astro";
const profilePicture = "public/images/myself.jpg"


const blogs = await Astro.glob<{
	title: string
	subtitle: string
	poster: string
}>("../pages/blogs/*.md")
---

<Main title="Fernando Valerio">
	<div class="profile">
		<img class="profile__picture" src={profilePicture} alt="Fernando Valerio's Website" width="100px" height="100px" >
		<div class="profile__details">
			<h1>Fernando Valerio</h1>
			<h2>Front End Engineer at Nobee</h2>
			<p>Hi, I'm Fernando Valerio, a Front End Engineer at Nobee. I'm a passionate learner and a self-taught developer. I love to learn new things and share my knowledge with others.</p>
		</div>
	</div>
	<Cards cards={[
		{
			title: "My life phylosophy",
			gradientFrom: "#FDC830",
			gradientTo: "#F37335",
			to: "/philosophies",
		},
		{
			title: "Best article of the month",
			gradientFrom: "#4CA1AF",
			gradientTo: "#C4E0E5",
			to: "/beyond-tech",
		},
		{
			title: "My work and projects",
			gradientFrom: "blue",
			gradientTo: "purple",
			to: "/work-summary",
		},
	]}/>

	<div class="featured-blogs">
		<h3 class="featured-blogs__title">Featured Blogs</h3>
		<p class="featured-blogs__description">Opinion pieces that will change everything you know about web development.</p>
	</div>

	<ol class="blogs">
		{blogs.map((blog)=>{
			return 	(
			<li class="blog__list">
				<a class="blog__link" href={blog.url}>
					{blog.frontmatter.title}
			</a>
		</li>)
		})}
	</ol>
</Main>

<style>
	.profile{
		display: flex;
		align-items: start;
		flex-wrap: wrap;
		padding: 1rem 0 3rem 0;
	}

	.profile__details{
		flex: 1 0 300px;
	}

	.profile__details > h1{
		margin-top: 0;
	}

	.profile__picture{
		border-radius: 50%;
		margin:0 2rem 1rem 0;
	}

	.featured-blogs{
		margin: 0;
		padding: 3rem 0 0 0;
	}

	.featured-blogs__title{
		font-size: 2rem;
		color: var(--grey-900);
	}

	.featured-blogs__description{
		margin-top: -1.2rem;
	}

	.blogs{
		font-size: 1rem;
		font-weight: 500;
	}

	.blog__list{
		border-bottom: 1px solid var(--grey-200);
	}

	.blog__link{
		opacity: 1;
		height: 100%;
		display: block;
		padding: 1rem 0;
		color: var(--grey-200);
		text-decoration: none;
		transform: opacity 0.2s ease-in-out;
	}

	.blog__link:hover{
		opacity: 0.7;
	}

</style>